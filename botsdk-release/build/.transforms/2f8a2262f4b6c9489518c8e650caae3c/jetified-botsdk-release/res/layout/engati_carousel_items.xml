<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@android:color/transparent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/carousel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/carousel_border"
        android:padding="10dp"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/carousel_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/circle"
        android:scaleType="fitCenter" />

    <View
        android:id="@+id/border_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />
    <TextView
        android:id="@+id/carousel_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="25dp"
        android:textColor="@color/colorDefault"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="Sample heading" />


    <View
        android:id="@+id/border_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />

    <TextView
        android:id="@+id/carousel_item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:minHeight="50dp"
        android:textSize="12sp"
        tools:text="This is a sample subtitle for testing purpose" />

    <View
        android:id="@+id/border_subtitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:id="@+id/carousel_item_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>